<!DOCTYPE html>
<html>
  <head>
    <title>Rails Book Depot</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    
    <nav class="navbar navbar-default">
  
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><%= image_tag('rails.png') %></a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/static_pages/home">Home</a></li>
      <li><a href="/static_pages/about">About</a></li>
      <li><a href="/static_pages/links">Links</a></li>
      <% if session[:user_id] %>
        <li><%= link_to 'Orders', orders_path %></li>
        <li><%= link_to 'Products', products_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Logout', logout_path, method: :delete, class:"btn btn-xs btn-warning" %></li>
      </ul>
    <% end %>
    
    </nav>
    <p id="notice", class="bg-info"><%= notice %></p>
    <div>
    <%= yield %>
    
    </div>
  </body>
</html>